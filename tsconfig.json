{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "outDir": "dist"
    },
    "exclude": [
        "./node_modules"
    ],
    "include": [
        "./src"
    ]
  }